<h1><%= @product.name %></h1>
<%= @product.value %>
<br>
<%= link_to 'voltar', products_path %> - 


<%= form_for CartItem.new, url: add_to_cart_path do |f| %>
  <%= f.hidden_field :product_id, value: @product.id %>
  <%= f.hidden_field :product_type, value: @product.class.to_s %>
  <%= f.submit 'add to cart' %>
<% end %>